# BugSquasher Environment Configuration
# Copy this file to .env and fill in your values

# MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/bugsquasher

# JWT secret key (change this in production!)
JWT_SECRET=your-secret-key-here

# Backend API port
PORT=3001

# SMTP email configuration (optional - app works without email)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@bugsquasher.local
