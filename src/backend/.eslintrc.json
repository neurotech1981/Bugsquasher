{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaFeatures": {
            "jsx": true
        },
        "babelOptions": {
            "presets": ["@babel/preset-env"],
            "plugins": ["@babel/plugin-syntax-import-assertions"]
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "operator-linebreak": [
            "error",
            "after",
            {
                "overrides": {
                    ":": "before"
                }
            }
        ],
        "react/prop-types": 0
    }
}
